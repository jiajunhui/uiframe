<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_background_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/page_state_loading_progress_bar"
            android:indeterminateDrawable="@anim/loading_state"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:clickable="false"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/page_state_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/loading_text_color"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@string/loading_text"/>
    </LinearLayout>


</RelativeLayout>